doctype html
- load staticfiles
html
    head
        title=title
        link(href="/static/images/klee.svg", rel="icon")
        link(href='/static/css/notify.css', rel='stylesheet')
        link(href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css", rel="stylesheet")
        link(href="https://fonts.googleapis.com/css?family=Open+Sans:300", rel="stylesheet")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="/static/javascripts/jquery-3.3.1.min.js")
        script(src='/static/javascripts/notify.js')
        block head
    body
        .notification-container
            if messages
                for message in messages
                    if message.tags
                        span(class="#{message.tags} notification-box position-box") #{message}
        block body