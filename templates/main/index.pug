extends layout-main

block head
    meta(charset='utf-8')
block body
    #container
        #logo
            img(src='/static/images/klee.svg').logo-style
        #topbar
            #appname Home
            #pic-profile.button-pointer
                #pic-options.pic-options-container
                    div.pic-options-content Logout
        #sidebar
        #content 
            span content

    h2 Klee
    if user.is_authenticated
        a(href='{% url "logout" %}') Logout
    else
        a(href='{% url "login" %}') Login